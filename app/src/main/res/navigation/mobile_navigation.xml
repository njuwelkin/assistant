<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_chat">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.assistant.ui.home.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_course"
        android:name="com.example.assistant.ui.course.CourseFragment"
        android:label="@string/title_course"
        tools:layout="@layout/fragment_course" />

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.assistant.ui.notifications.MeFragment"
        android:label="@string/title_me"
        tools:layout="@layout/fragment_me" />

    <fragment
        android:id="@+id/parent_password_verify_fragment"
        android:name="com.example.assistant.ui.notifications.ParentPasswordVerifyFragment"
        android:label="验证家长密码"
        tools:layout="@layout/fragment_parent_password_verify" />

    <fragment
        android:id="@+id/daily_time_limit_fragment"
        android:name="com.example.assistant.ui.notifications.DailyTimeLimitFragment"
        android:label="每日使用时长设置"
        tools:layout="@layout/fragment_daily_time_limit" />
        
    <fragment
        android:id="@+id/time_period_settings_fragment"
        android:name="com.example.assistant.ui.notifications.TimePeriodSettingsFragment"
        android:label="使用时段限制设置"
        tools:layout="@layout/fragment_time_period_settings" />
</navigation>