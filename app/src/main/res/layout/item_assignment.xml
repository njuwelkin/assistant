<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/light_gray"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 课程名称 -->
        <TextView
            android:id="@+id/assignment_course_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程名称"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <!-- 作业标题 -->
        <TextView
            android:id="@+id/assignment_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="作业标题"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- 作业描述 -->
        <TextView
            android:id="@+id/assignment_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="作业描述"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- 截止日期和完成状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- 截止日期 -->
            <TextView
                android:id="@+id/assignment_due_date_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="截止日期"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <!-- 完成复选框 -->
            <CheckBox
                android:id="@+id/assignment_completed_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>